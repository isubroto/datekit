{
  "name": "@subrotosaha/datekit",
  "version": "1.1.0",
  "description": "A modern, lightweight TypeScript library for date manipulation with timezone support, business days, and chainable API.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --minify",
    "build:dev": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:verbose": "vitest run tests/verbose/DateKit.verbose.complete.test.ts",
    "test:types": "vitest run tests/verbose/complete/DateKit.types.test.ts",
    "test:methods": "vitest run tests/verbose/complete/DateKit.all-methods.test.ts",
    "test:duration": "vitest run tests/verbose/complete/Duration.all-methods.test.ts",
    "test:timezone": "vitest run tests/timezone-format.test.ts",
    "test:all-verbose": "vitest run tests/verbose/complete",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run test && npm run build",
    "pack": "npm pack --dry-run"
  },
  "keywords": [
    "date",
    "time",
    "datetime",
    "typescript",
    "datekit",
    "moment",
    "date-fns",
    "dayjs",
    "timezone",
    "locale",
    "duration",
    "business-days",
    "calendar",
    "immutable",
    "utc"
  ],
  "author": "Subroto Saha",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isubroto/datekit.git"
  },
  "bugs": {
    "url": "https://github.com/isubroto/datekit/issues"
  },
  "homepage": "https://github.com/isubroto/datekit#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
